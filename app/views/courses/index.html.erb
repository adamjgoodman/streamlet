<br />

<div class="soft-box col-10 offset-1">
	<h1 class="text-center">Learn something today</h1>
	<hr />

	<% @courses.each do |course| %>
		<h2 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h2>
		
		<div class="row">
				<%= image_tag @course.image.url, class: 'img-fluid' %>
			<div class="col-sm-10 offset-1 text-center">
				<%= course.description %>
			</div>
			<div class="col-sm-10 offset-1 text-center">
				<br />
				<%= link_to 'Learn More', course_path(course), class: 'btn btn-primary btn-large' %>
			</div>
		</div><hr />
		<br class="clear" />
	<% end %>
</div>