<div class="soft-box col-10 offset-1">
	<h1 class="text-center">Add New Lesson</h1>
  <%= simple_form_for @lesson, url: instructor_section_lessons_path(@section) do |f| %>
	<div class="form-inputs">
		<%= f.input :title %>
		<%= f.input :subtitle %>
	</div>
	<br />
	<div class="form-actions">
		<%= f.submit "Add Lesson", class: 'btn btn-primary' %>
	</div>
	<% end %>	
	<br />
</div>